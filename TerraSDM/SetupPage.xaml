<Page
	x:Class="TerraSDM.SetupPage"
	x:Name="PageBackground"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:TerraSDM">
	<Page.Background>
		<RadialGradientBrush x:Name="MyRadialGradient"
							 Center="0,1"
							 RadiusX="1"
							 RadiusY="1">
			<GradientStop x:Name="GradientStart"
						  Color="#FF023264"
						  Offset="0"/>
			<GradientStop x:Name="GradientEnd"
						  Color="#00023264"
						  Offset="1"/>
		</RadialGradientBrush>
	</Page.Background>
	<Grid x:Name="MainGrid"
		  HorizontalAlignment="Left"
		  VerticalAlignment="Center">
		<Grid.RenderTransform>
			<TranslateTransform x:Name="MainTransform"/>
		</Grid.RenderTransform>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0"
				   x:Name="setupTitle"
				   Text="Welcome to TerraSDM"
				   FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
				   FontSize="60"
				   Margin="20"
				   HorizontalAlignment="Left"
				   VerticalAlignment="Center"
				   TextWrapping="Wrap"/>
		<TextBlock Grid.Row="1"
				   x:Name="setupBody"
				   Text="Just a few more steps to get you started."
				   FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
				   FontSize="25"
				   Margin="20"
				   HorizontalAlignment="Left"
				   VerticalAlignment="Center"
				   TextWrapping="Wrap"/>
		<!-- Page 1: Folder Selection -->
		<StackPanel Grid.Row="2"
					x:Name="folderSelectionPanel"
					Margin="20"
					Visibility="Collapsed">
			<Button x:Name="selectFolderButton"
					Content="Select Folder"
					FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
					FontSize="16"
					Padding="20,10"
					Click="SelectFolder"
					HorizontalAlignment="Left"
					Margin="0,10,0,10"/>
			<TextBlock x:Name="selectedPathText"
					   Text="No folder selected"
					   FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
					   FontSize="16"
					   Foreground="#FFB0B0B0"
					   TextWrapping="Wrap"
					   MaxWidth="600"
					   HorizontalAlignment="Left"/>
		</StackPanel>
		<!-- Page 2: API Token -->
		<StackPanel Grid.Row="2"
					x:Name="apiTokenPanel"
					Margin="20"
					Visibility="Collapsed">
			<TextBlock Text="Cesium Ion Access Token:"
					   FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
					   FontSize="16"
					   Margin="0,0,0,10"
					   Foreground="#FFB0B0B0"/>
			<TextBox x:Name="cesiumTokenInput"
					 FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
					 FontSize="16"
					 PlaceholderText="Enter your API token"
					 Width="500"
					 HorizontalAlignment="Left"
					 Margin="0,0,0,10"/>
			<HyperlinkButton Content="Get a free Cesium Ion token"
							 NavigateUri="https://ion.cesium.com/tokens"
							 FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
							 FontSize="14"
							 Margin="0,5,0,0"/>
		</StackPanel>
		<!-- Page 3: Summary -->
		<StackPanel Grid.Row="2"
					x:Name="summaryPanel"
					Margin="20"
					Visibility="Collapsed">
			<StackPanel Margin="0,10,0,10">
				<TextBlock Text="Scenery Folder:"
						   FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
						   FontSize="16"
						   Foreground="#FFB0B0B0"
						   Margin="0,0,0,5"/>
				<TextBlock x:Name="summarySceneryPath"
						   Text="Not selected"
						   FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
						   FontSize="16"
						   TextWrapping="Wrap"
						   MaxWidth="600"
						   HorizontalAlignment="Left"/>
			</StackPanel>
			<StackPanel Margin="0,10,0,10">
				<TextBlock Text="Cesium API:"
						   FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
						   FontSize="16"
						   Foreground="#FFB0B0B0"
						   Margin="0,0,0,5"/>
				<TextBlock x:Name="summaryApiToken"
						   Text="Not configured"
						   FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
						   FontSize="16"/>
			</StackPanel>
		</StackPanel>
		<Button Grid.Row="3"
				x:Name="startSetupButton"
				Content="->"
				FontFamily="ms-appx:///Assets/Fonts/bahnschrift.ttf#Bahnschrift"
				FontSize="18"
				Margin="20"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				Click="NextPage"/>
	</Grid>
</Page>
