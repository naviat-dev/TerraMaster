<Page x:Class="TerraMaster.SettingsPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:TerraMaster"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
	<Page.Resources>
+		<Style x:Key="MenuButtonStyle" TargetType="Button">
+			<Setter Property="HorizontalAlignment" Value="Left"/>
+			<Setter Property="VerticalAlignment" Value="Center"/>
+			<Setter Property="Background" Value="Transparent"/>
+			<Setter Property="BorderThickness" Value="0"/>
+		</Style>
	</Page.Resources>
	<ScrollViewer IsTabStop="True">
		<Expander Header="General" Margin="60,0,0,0" HorizontalAlignment="Stretch"
				  VerticalAlignment="Top" IsExpanded="True">
			<StackPanel x:Name="GeneralSettingsPanel" HorizontalAlignment="Left" VerticalAlignment="Top">
				<StackPanel Orientation="Horizontal" Margin="0,10,0,0">
					<TextBlock Text="Save Path:" VerticalAlignment="Center"/>
					<TextBox x:Name="tbSavePath" Margin="10,0,0,0" Width="300"/>
				</StackPanel>
				<CheckBox x:Name="cb1" Content="Two-state CheckBox"/>
			</StackPanel>
		</Expander>
	</ScrollViewer>
</Page>